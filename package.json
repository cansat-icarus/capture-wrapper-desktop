{
  "name": "capture-wrapper-desktop",
  "productName": "IcarusCanSatGroundStationDesktop",
  "version": "0.0.0",
  "description": "Ground station software for the Icarus CanSat (Desktop version)",
  "license": "MIT",
  "author": {
    "name": "Andr√© Breda",
    "email": "addobandre99@gmail.com"
  },
  "electronVersion": "1.4.3",
  "main": "src/index.js",
  "scripts": {
    "test": "xo",
    "build": "export NODE_ENV='production'; electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar --all --version=$npm_package_electronVersion",
    "start": "NODE_ENV='dev' electron . & browser-sync start --server ui --files ui --no-open",
    "postinstall-broken-dont-use-for-now": "electron-rebuild -e=node_modules/electron",
    "postinstall": "IOJS_ORG_MIRROR=https://atom.io/download/atom-shell npm rebuild --runtime=electron --target=1.4.0 --arch=x64 --build-from-source"
  },
  "dependencies": {
    "camelcase": "^4.0.0",
    "capture-lib": "file:../capture-lib",
    "rimraf": "^2.5.4"
  },
  "devDependencies": {
    "browser-sync": "^2.17.3",
    "devtron": "^1.4.0",
    "electron": "1.4.3",
    "electron-packager": "^8.1.0",
    "electron-rebuild": "^1.2.1",
    "eslint-plugin-ava": "^3.1.1",
    "eslint-plugin-html": "^1.5.3",
    "xo": "^0.17.0"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "extensions": [
      "html",
      "json"
    ],
    "plugins": [
      "html",
      "json"
    ],
    "ignores": [
      "docs/**",
      "ui/lib/app-header-layout.html"
    ],
    "rules": {
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Polymer",
            "DateTimeFormat"
          ]
        }
      ],
      "no-return-assign": "off",
      "no-implicit-coercion": "off"
    },
    "overrides": [
      {
        "files": "{bower,package}.json",
        "spaces": 2
      },
      {
        "files": "**/*.html",
        "envs": [
          "browser"
        ],
        "globals": [
          "CGBridge",
          "CGPacket",
          "CGScoreBubbleBehavior",
          "CGStationScoreBubbleBehavior",
          "EventEmitter",
          "moment",
          "Polymer"
        ],
        "rules": {
          "unicorn/no-abusive-eslint-disable": 0
        }
      }
    ]
  }
}
