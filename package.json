{
  "name": "capture-wrapper-desktop",
  "private": true,
  "productName": "IcarusCanSatGroundStationDesktop",
  "version": "0.1.0",
  "description": "Ground station software for the Icarus CanSat (Desktop version)",
  "license": "MIT",
  "author": {
    "name": "Andr√© Breda",
    "email": "addobandre99@gmail.com"
  },
  "electronVersion": "1.4.15",
  "main": "src/index.js",
  "scripts": {
    "test": "xo",
    "build": "export NODE_ENV='production'; electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar",
    "start": "NODE_ENV='dev' electron . & browser-sync start --server ui --files ui --no-open",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "@cansat-icarus/capture-lib": "^1.0.3",
    "camelcase": "^4.0.0",
    "rimraf": "^2.6.1"
  },
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "cz-conventional-changelog": "^2.0.0",
    "devtron": "^1.4.0",
    "electron": "1.4.15",
    "electron-packager": "^8.5.2",
    "electron-rebuild": "^1.5.7",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-json": "^1.2.0",
    "xo": "^0.17.1"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "extensions": [
      "html",
      "json"
    ],
    "plugins": [
      "html",
      "json"
    ],
    "ignores": [
      "docs/**",
      "ui/lib/app-header-layout.html"
    ],
    "rules": {
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Polymer",
            "DateTimeFormat"
          ]
        }
      ],
      "no-return-assign": "off",
      "no-implicit-coercion": "off"
    },
    "overrides": [
      {
        "files": "{bower,package}.json",
        "spaces": 2
      },
      {
        "files": "**/*.html",
        "envs": [
          "browser"
        ],
        "globals": [
          "CGBridge",
          "CGPacket",
          "CGScoreBubbleBehavior",
          "CGStationScoreBubbleBehavior",
          "EventEmitter",
          "moment",
          "Polymer"
        ],
        "rules": {
          "unicorn/no-abusive-eslint-disable": 0
        }
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
