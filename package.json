{
  "name": "capture-wrapper-desktop",
  "productName": "IcarusCanSatGroundStationDesktop",
  "version": "0.0.0",
  "description": "Ground station software for the Icarus CanSat (Desktop version)",
  "license": "MIT",
  "author": {
    "name": "Andr√© Breda",
    "email": "addobandre99@gmail.com"
  },
  "electronVersion": "1.4.0",
  "main": "src/index.js",
  "scripts": {
    "test": "standard",
    "build": "export NODE_ENV='production'; electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar --all --version=$npm_package_electronVersion",
    "start": "NODE_ENV='dev' electron . & browser-sync start --server ui --files ui --no-open",
    "postinstall-broken-dont-use-for-now": "electron-rebuild -e=node_modules/electron",
    "postinstall": "IOJS_ORG_MIRROR=https://atom.io/download/atom-shell npm rebuild --runtime=electron --target=1.4.0 --arch=x64 --build-from-source"
  },
  "devDependencies": {
    "browser-sync": "^2.14.0",
    "electron": "1.4.0",
    "electron-packager": "^8.0.0",
    "electron-rebuild": "^1.2.0",
    "eslint-plugin-ava": "^2.5.0",
    "eslint-plugin-html": "^1.5.2",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "space": 2,
    "plugins": [
      "ava",
      "html"
    ],
    "ignores": [
      "docs/**",
      "ui/lib/app-header-layout.html"
    ],
    "rules": {
      "babel/object-curly-spacing": [
        "error",
        "always"
      ],
      "babel/array-bracket-spacing": [
        "error",
        "always"
      ],
      "babel/new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Polymer",
            "DateTimeFormat"
          ]
        }
      ],
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "keyword-spacing": [
        "error",
        {
          "overrides": {
            "catch": {
              "after": false
            },
            "for": {
              "after": false
            },
            "if": {
              "after": false
            },
            "switch": {
              "after": false
            },
            "while": {
              "after": false
            }
          }
        }
      ],
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "no-warning-comments": 0,
      "no-implicit-coercion": 0,
      "no-return-assign": 0,
      "ava/test-ended": 0,
      "import/no-named-as-default": 0,
      "import/order": 0
    },
    "overrides": [
      {
        "files": "**/*.html",
        "envs": [
          "browser"
        ],
        "globals": [
          "CGBridge",
          "CGPacket",
          "CGScoreBubbleBehavior",
          "CGStationScoreBubbleBehavior",
          "EventEmitter",
          "moment",
          "Polymer"
        ]
      }
    ]
  }
}
